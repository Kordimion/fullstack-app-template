{
  "name": "eshop",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev@spa": "cd frontend/spa && npm run start",
    "dev@catalog": "cd services/catalogapi && dotnet run",
    "dev": "concurrently --kill-others \"npm run start@spa\" \"npm run start@catalog\"",
    "build@spa": "docker compose build spa",
    "build@catalog": "docker compose build catalogapi",
    "build": "docker compose build",
    "up": "docker compose up",
    "down": "docker compose down"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
